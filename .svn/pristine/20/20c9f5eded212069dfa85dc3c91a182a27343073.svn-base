package postIt.view;

import java.util.ArrayList;

import postIt.note.dat.NoteInfo;

/**
 * Adapter between the view and controller
 * 
 * @author DavidNichol
 * 
 */
public interface IPostItViewToControllerAdapter {

	/**
	 * Create a new post it.
	 */
	void createPostIt();

	/**
	 * Save all of the post it data. Typically done when the window is being
	 * closed
	 * 
	 * @param postItInfoList
	 *            The data to save.
	 */
	void saveData(ArrayList<NoteInfo> postItInfoList);

}
